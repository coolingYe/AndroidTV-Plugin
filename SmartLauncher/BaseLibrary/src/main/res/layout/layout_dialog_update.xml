<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="584px"
    android:layout_height="307px"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner20_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82px"
            android:gravity="center"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:text="检测到新版本，快来体验吧！"
            android:textColor="@color/colorWhite"
            android:textSize="32px"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/force_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:focusable="true"
                android:text="升级"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/positive"
                android:layout_width="200px"
                android:layout_height="60px"
                android:layout_marginLeft="60px"
                android:background="@drawable/selector_corner50_frame_dialog"
                android:focusable="true"
                android:text="确定"
                android:textColor="@drawable/selector_dialog_text_bg"
                android:textSize="32px"

                />

            <Button
                android:id="@+id/cancel"
                android:layout_width="200px"
                android:layout_height="60px"
                android:layout_marginLeft="53px"
                android:layout_marginRight="70px"
                android:background="@drawable/selector_corner50_frame_dialog"
                android:focusable="true"
                android:text="取消"
                android:textColor="@drawable/selector_dialog_text_bg"
                android:textSize="32px"


                />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>