<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_req_offline_base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_req_offline_base"
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@mipmap/img_offline" />

    <TextView
        android:id="@+id/tv_req_offline_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="网络中断，点击设置网络"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_req_offline_base"
        android:layout_width="106dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:background="@drawable/selector_margin_3_2"
        android:text="设置"
        android:textColor="@color/color_selector_2a2c41_ffffff"
        android:textSize="16sp" />
</LinearLayout>