<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="45dp"
    tools:ignore="RtlSymmetry"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:layout_width="148dp"
        android:layout_height="148dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="130dp"
        android:src="@mipmap/img_activation_key"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/txt_activation_check_title"
        style="@style/GuideRightPanelTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="让我们来激活AI互动屏盒子" />

    <TextView
        android:id="@+id/txt_activation_check_summary"
        style="@style/GuideRightPanelSummary"
        app:layout_constraintLeft_toLeftOf="@+id/txt_activation_check_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_activation_check_title"
        app:layout_constraintRight_toRightOf="parent"
        android:text="在使用之前，必须先激活设备，如未激活请立即激活，如已激活请选择已激活账号登录。" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_activation_check_enter"
        android:layout_width="258dp"
        android:layout_height="54dp"
        android:layout_marginEnd="78dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        app:cardBackgroundColor="@android:color/transparent"
        app:rippleColor="@color/rippleColor"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_activation_check_enter"
            android:layout_width="252dp"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/gradient_h_c24_0800f8_8541ce"
            android:gravity="center"
            android:text="已激活账号登陆"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="424dp"
        android:layout_marginBottom="88dp"
        android:background="#956CE6"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_activation_check_prev"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="23dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        app:cardBackgroundColor="@android:color/transparent"
        app:rippleColor="@color/rippleColor"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/txt_activation_check_prev"
            android:layout_width="114dp"
            android:layout_height="42dp"
            style="@style/GuideButtonC5"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:text="上一步" />

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>