<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:top="0px"
    android:bottom="0px"
    android:left="0px"
    android:right="0px">
    <shape
        android:shape="rectangle">
        <!-- 圆角的半径 -->
        <corners android:radius="30px"/>


        <!-- 填充颜色 -->
        <gradient
            android:startColor="@color/src_c7"
            android:endColor="@color/src_c8"
            android:angle="90"/>
    </shape>
</item>

<item>
    <shape
        android:shape="rectangle">
        <!-- 圆角的半径 -->
        <corners android:radius="30px"/>

        <!-- 填充颜色 -->
        <solid android:color="@color/transparent"/>

      <!--  <stroke android:width="@dimen/borderWidth" android:color="@color/white"/>-->
    </shape>
</item>
</layer-list>
