<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <ImageView
        android:layout_width="122dp"
        android:layout_height="94dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@mipmap/img_user_common_item_shadow"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_item_user_product"
        android:layout_width="118dp"
        android:layout_height="89dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="1dp"
        app:rippleColor="#30FFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="0px"
            app:cardBackgroundColor="#00000000">

            <ImageView
                android:id="@+id/iv_item_user_product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_item_user_product_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingStart="44dp"
                android:paddingEnd="44dp"
                android:paddingBottom="17dp"
                android:src="@mipmap/icon_delete"
                android:background="#66000000"
                android:visibility="invisible"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_user_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="9sp" />

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>