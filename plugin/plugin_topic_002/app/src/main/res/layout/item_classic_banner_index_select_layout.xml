<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    android:paddingStart="15dp"
    android:background="@drawable/gradient_h_7fffffff_00ffffff">

    <TextView
        android:id="@+id/txt_banner_index_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_banner_index_summary"
        app:layout_constraintVertical_chainStyle="packed"
        android:textSize="26sp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/txt_banner_index_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_banner_index_title"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>